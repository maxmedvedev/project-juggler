<idea-plugin>
    <id>maxmedvedev.project-juggler</id>
    <name>Project Juggler</name>
    <vendor>Max Medvedev</vendor>

    <description><![CDATA[
        Allows opening any project in a new IntelliJ IDEA instance with an isolated configuration.
        It helps keep your IDE caches clean and free of unnecessary stuff.<br>
        <br>
        Use `Cmd+Shift+P`/`Ctrl+Shift+P` to open the Recent Juggled Projects ("Recent Juggled Projects" action).<br>
        Use "Browse..." to open a new project.<br>
        Use recent project items to reopen a project or switch to an already opened project.<br>
        <br>
        <p>Details:</p>
        <ul>
            <li>The configuration is copied from the main IJ instance.</li>
            <li>Each project is open with the same configuration each time.</li>
        </ul>
    ]]></description>

    <depends>com.intellij.modules.platform</depends>

    <resource-bundle>messages.ProjectJugglerBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <notificationGroup id="project-juggler.notifications" displayType="BALLOON" bundle="messages.ProjectJugglerBundle"
                           key="notification.group.project-juggler.notifications"/>
    </extensions>

    <actions resource-bundle="messages.ProjectJugglerBundle">
        <action id="com.projectjuggler.plugin.OpenWithProjectJuggler"
                class="com.projectjuggler.plugin.actions.OpenWithProjectJugglerAction"
                icon="AllIcons.Actions.Execute">
            <add-to-group group-id="FileMenu" anchor="after" relative-to-action="OpenFile"/>
        </action>
        <action id="com.projectjuggler.plugin.ShowRecentProjects"
                class="com.projectjuggler.plugin.actions.ShowRecentProjectsAction"
                icon="AllIcons.Actions.Search">
            <add-to-group group-id="FileMenu" anchor="after"
                          relative-to-action="com.projectjuggler.plugin.OpenWithProjectJuggler"/>
            <keyboard-shortcut keymap="$default" first-keystroke="meta shift P"/>
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl shift P"/>
        </action>

        <action id="com.projectjuggler.plugin.OpenProjectCopy"
                class="com.projectjuggler.plugin.actions.OpenProjectCopyAction"
                icon="AllIcons.Actions.Copy">
            <add-to-group group-id="FileMenu" anchor="after" relative-to-action="com.projectjuggler.plugin.OpenWithProjectJuggler"/>
        </action>
    </actions>
</idea-plugin>

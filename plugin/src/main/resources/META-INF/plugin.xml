<idea-plugin>
    <id>com.max.medvedev.idea-juggler</id>d>
    <name>IDEA Juggler</name>
    <vendor>Max Medvedev</vendor>

    <description><![CDATA[
        Allows opening any project in a new IntelliJ IDEA instance with an isolated configuration.
        It helps keep your IDE caches clean and free of unnecessary stuff.

        <p>Details:</p>
        <ul>
            <li>The configuration is copied from the main IJ instance.</li>
            <li>Each project is open with the same configuration each time.</li>
        </ul>
    ]]></description>

    <depends>com.intellij.modules.platform</depends>

    <resource-bundle>messages.IdeaJugglerBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <notificationGroup id="idea-juggler.notifications" displayType="BALLOON" bundle="messages.IdeaJugglerBundle"
                           key="notification.group.idea-juggler.notifications"/>
    </extensions>

    <actions resource-bundle="messages.IdeaJugglerBundle">
        <action id="com.ideajuggler.plugin.OpenWithIdeaJuggler"
                class="com.ideajuggler.plugin.actions.OpenWithIdeaJugglerAction"
                icon="AllIcons.Actions.Execute">
            <add-to-group group-id="FileMenu" anchor="after" relative-to-action="OpenFile"/>
        </action>
        <action id="com.ideajuggler.plugin.ShowRecentProjects"
                class="com.ideajuggler.plugin.actions.ShowRecentProjectsAction"
                icon="AllIcons.Actions.Search">
            <add-to-group group-id="FileMenu" anchor="after"
                          relative-to-action="com.ideajuggler.plugin.OpenWithIdeaJuggler"/>
            <keyboard-shortcut keymap="$default" first-keystroke="meta shift P"/>
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl shift P"/>
        </action>

        <action id="com.ideajuggler.plugin.OpenProjectCopy"
                class="com.ideajuggler.plugin.actions.OpenProjectCopyAction"
                icon="AllIcons.Actions.Copy">
            <add-to-group group-id="FileMenu" anchor="after" relative-to-action="com.ideajuggler.plugin.OpenWithIdeaJuggler"/>
        </action>
    </actions>
</idea-plugin>
